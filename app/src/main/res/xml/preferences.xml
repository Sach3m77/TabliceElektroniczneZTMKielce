<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/general">

        <ListPreference
            app:defaultValue="0"
            app:dialogTitle="@string/theme"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_entry_values"
            app:icon="@drawable/ic_palette"
            app:key="theme_key"
            app:summary="%s"
            app:title="@string/theme" />

        <ListPreference
            app:defaultValue="0"
            app:dialogTitle="@string/language"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_entry_values"
            app:icon="@drawable/ic_language"
            app:key="language_key"
            app:summary="%s"
            app:title="@string/language" />

    </PreferenceCategory>

</PreferenceScreen>